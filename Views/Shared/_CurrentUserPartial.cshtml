@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
            <button id="logout" type="submit" class="">Logout</button>
        </form>

}
else
{
    <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>


    <a id="login" asp-area="Identity" asp-page="/Account/Login">
        Login
    </a>
}